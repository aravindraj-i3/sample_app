<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 mx-auto">
    <%= form_for(@user) do |f| %>
      <%# FIX: Added render error_messages partial %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %> <%# FIX: Spacing for f.text_field and class: %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %> <%# FIX: Spacing for f.email_field and class: %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %> <%# FIX: Spacing for f.password_field and class: %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %> <%# FIX: Spacing for f.password_field and class: %>

      <%= f.submit "Create my account", class: "btn btn-primary" %> <%# FIX: Spacing for f.submit and class: %>
    <% end %> <%# This end closes the form_for block %>
  </div> <%# This closes the col-md-6 div %>
</div> <%# This closes the row div %>